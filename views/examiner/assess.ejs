<!DOCTYPE html>
<html lang="en">
<%- include ('../layouts/header'); %>

    <body>
        <!-- Navigation-->
        <!-- Page Header-->
        <main class="flex-shrink-0">
            <!-- Navigation-->

            <%- include ('../layouts/navbar'); %>
                <!-- Header-->
                <header class="bg-dark py-5">
                    <div class="container px-5">
                        <div class="row gx-5 align-items-center justify-content-center">
                            <div class=" offset-lg-3 col-lg-6 col-xl-6 col-xxl-6">
                                <div class="my-5 text-center text-xl-start">
                                    <h1 class="display-5 fw-bolder text-white mb-2">Assessment</h1>
                                    <p class="lead fw-normal text-white-50 mb-4">Drive Test Booking Kiosk</p>


                                </div>
                            </div>

                        </div>
                </header>
                <!-- Features section-->
                <section class="py-5" id="features">
                    <div class="container px-5 my-5">
                        <div class="row gx-5">

                            <div class="col-md-4">

                                <div class="card card-primary card-outline">
                                    <div class="card-body box-profile">
                                        <div class="text-center">
                                            <img class="profile-user-img img-fluid img-circle"
                                                src="https://ui-avatars.com/api/?background=random&rounded=true&name=<%= (data.firstName) ? data.firstName : "" %> <%= (data.lastName) ? data.lastName : "" %>"
                                                alt="User profile picture">
                                        </div>
                                        <h3 class="mt-2 text-center">
                                            <%= (data.firstName) ? data.firstName : "" %>
                                                <%= (data.lastName) ? data.lastName : "" %>
                                        </h3>
                                        <p class="text-muted text-center">Car Details</p>
                                        <ul class="list-group list-group-unbordered mb-3">
                                            <li class="list-group-item">
                                                <b>Make</b> <span class="float-end">
                                                    <%= (data.car_details.make) ? data.car_details.make : "" %>
                                                </span>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Model</b> <span class="float-end">
                                                    <%= (data.car_details.model) ? data.car_details.model : "" %>
                                                </span>
                                            </li>
                                            <li class="list-group-item">
                                                <b>Year</b> <span class="float-end">
                                                    <%= (data.car_details.year) ? data.car_details.year : "" %>
                                                </span>
                                            </li>
                                            <li class="list-group-item">
                                                <b>PlateNo</b> <span class="float-end">
                                                    <%= (data.car_details.plateNo) ? data.car_details.plateNo : "" %>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>

                                </div>




                            </div>

                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h4 class="card-title">Final Result</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/examiner/assess/save" method="post">

                                            <input type="hidden" name="id" value="<%= (data._id) ? data._id : "" %>">

                                            <label for="inputStatus">Test Result</label>
                                            <div class="form-check">
                                                <input class="form-check-input" required value="1" type="radio" name="result"
                                                    id="flexRadioDefault1">
                                                <label class="form-check-label" for="flexRadioDefault1">
                                                    Pass
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" required value="0" type="radio" name="result"
                                                    id="flexRadioDefault2">
                                                <label class="form-check-label" for="flexRadioDefault2">
                                                    Fail
                                                </label>
                                            </div>

                                            <div class="form-group mt-4">
                                                <label for="inputDescription">Test Comments</label>
                                                <textarea id="inputDescription" required name="comments"
                                                    class="form-control" rows="4"></textarea>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="submit" value="Submit" class="btn btn-success float-end">
                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>



                        </div>
                    </div>
                </section>

        </main>
        <!-- Footer-->
        <%- include ('../layouts/footer'); %>

            <%- include ('../layouts/scripts'); %>
    </body>

</html>