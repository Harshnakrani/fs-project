<!DOCTYPE html>
<html lang="en">
<%- include ('../layouts/header'); %>

    <body>
        <!-- Navigation-->
        <!-- Page Header-->
        <main class="flex-shrink-0">
            <!-- Navigation-->

            <%- include ('../layouts/navbar'); %>
                <!-- Header-->
                <header class="bg-dark py-5">
                    <div class="container px-5">
                        <div class="row gx-5 align-items-center justify-content-center">
                            <div class=" offset-lg-3 col-lg-6 col-xl-6 col-xxl-6">
                                <div class="my-5 text-center text-xl-start">
                                    <h1 class="display-5 fw-bolder text-white mb-2">Examiner</h1>
                                    <p class="lead fw-normal text-white-50 mb-4">Drive Test Booking Kiosk</p>


                                </div>
                            </div>

                        </div>
                </header>
                <!-- Features section-->
                <section class="py-5" id="features">
                    <div class="container px-5 my-5">
                        <div class="row gx-5">

                            <div class="filter mb-2">
                                <form action="/examiner" id="frm_filter" method="get">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <h4>Filter</h4>
                                            <div class="form-floating mb-3">
                                                <select id="fl_testtype"
                                                    onchange="document.getElementById('frm_filter').submit();"
                                                    name="testType" class="form-control">
                                                    <option value="">Select option</option>
                                                    <option value="G2" <% if(filter !="" && filter=="G2" ) { %>
                                                        selected
                                                        <% } %> >G2
                                                    </option>
                                                    <option value="G" <% if(filter !="" && filter=="G" ) { %>
                                                        selected
                                                        <% } %> >G
                                                    </option>
                                                </select>
                                                <label for="">Test Type</label>
                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>

                            <table id="dt_table" class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Driver Name</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Test Type</th>
                                        <th>Result</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(typeof data !=="undefined" ) {%>

                                        <% for(let i in data){ %>

                                            <tr>
                                                <td>
                                                    <%=data[i].firstName%>
                                                        <%=data[i].lastName%>
                                                </td>
                                                <td>
                                                    <%=data[i].appointment_ID.date%>
                                                </td>
                                                <td>
                                                    <%=data[i].appointment_ID.time%>
                                                </td>
                                                <td>
                                                    <%=data[i].TestType%>
                                                </td>
                                                <td>
                                                    <% if(data[i].result){ %>
                                                        <div class="badge bg-success">Pass</div>
                                                        <% } else if(data[i].result==false) { %>

                                                            <div class="badge bg-danger">Fail</div>
                                                            <%} else {%>
                                                                <div class="badge bg-dark">Pending</div>
                                                                <%}%>
                                                </td>
                                                <td> <a href="/examiner/assess/<%= data[i]._id%>"
                                                        class="btn btn-warning"> Examine </a>
                                                </td>
                                            </tr>

                                            <%} %>
                                                <%}%>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </section>
                <!-- Testimonial section-->

        </main>
        <!-- Footer-->
        <%- include ('../layouts/footer'); %>

            <%- include ('../layouts/scripts'); %>
    </body>

</html>